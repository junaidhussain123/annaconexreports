<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <report id="competitor_analysis_report"
                model="competitor.analysis.wizard"
                string="Competitor Analysis Report"
                report_type="xlsx"
                name="report_competitor_analysis.detailed_xlsx_template"
                file="Competitor Analysis Report"
        />

        <record id="competitor_analysis_wizard_view" model="ir.ui.view">
            <field name="name">competiotor_analysis_wizard_view</field>
            <field name="model">competitor.analysis.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="customer_name"/>
                            <field name="by_quotation"/>
                            <field name="by_tender"/>
                            <field name="by_date"/>
                            <field name="by_amount"/>

                        </group>
                        <group>
                            <field name="by_status"/>
                            <field name="by_comp"/>
                            <field name="by_items"/>
                            <field name="by_price"/>

                        </group>
                    </group>
                    <footer>
                        <button string="Competitor Analysis Report" name="competitor_analysis_report" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="copetitor_analysis_wizard_action" model="ir.actions.act_window">
            <field name="name">Competitor Analysis Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">competitor.analysis.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="competitor_analysis_wizard_view"/>
            <field name="target">new</field>
        </record>
        <!--         <menuitem id="point_of_sale.menu_point_rep" name="Sales Excel Report" -->
        <!--                   action="detail_sale_wizard_action_mnp" sequence="1"/> -->
        <!--         <menuitem id="menu_test" parent="point_of_sale.menu_point_rep" name="Test Module Parent"/> -->
        <menuitem id="menu_competitor_analysis" parent="crm.crm_menu_report" name="Competitor Analysis Report" action="copetitor_analysis_wizard_action"/>
    </data>
</odoo>